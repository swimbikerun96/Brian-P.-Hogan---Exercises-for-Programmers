<MyGrid>

	GridLayout:
		cols: 1
		size: root.width, root.height
		
		Label:
			text: 'Please Select a Temperature Scale'
			font_size: 32
			
		GridLayout:
			cols: 3
			
			Label:
				text: 'Fahrenheit'
				font_size: 25
				
			Label:
				text: 'Celsius'
				font_size: 25
				
			Label:
				text: 'Kelvin'
				font_size: 25
			
			CheckBox:
				id: fahrenheit
				group: 'scales'
				on_active: root.clear()
			
			CheckBox:
				id: celsius
				group: 'scales'
				on_active: root.clear()
			
			CheckBox:
				id: kelvin
				group: 'scales'
				on_active: root.clear()
		
		Slider:
			id: temp
			on_value:
				root.set_label(*args)
		
		Label:
			id: output
			multiline: True
			font_size: 32
			text: 'Use the Slider To Set The Temperature!'
			
